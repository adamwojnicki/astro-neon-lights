---
import { Image } from "@astrojs/image/components";
import Layout from "../../layouts/Layout.astro";
import images from "./gallery.json";
export async function getStaticPaths() {
  return images.map(({ src, name }) => {
    return {
      params: { name },
      props: { name, src },
    };
  });
}
const { name, src } = Astro.props;
---

<Layout title={name}>
  <a href="/gallery">&lt;- Go back</a>
  <h1>{name}</h1>
  <a href={src}>
    <Image
      alt="asdf"
      src={src}
      width={1024}
      height={576}
      format="webp"
      fit="fill"
    />
  </a>
  <style>
    a {
      color: var(--color-secondary);
      font-family: VHS;
      text-transform: uppercase;
    }
  </style>
</Layout>
